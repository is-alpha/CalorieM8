<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNewFoodFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center|bottom"
        android:textSize="30sp"
        android:padding="8dp"
        android:fontFamily="@font/semibold"
        android:textColor="@color/black"
        android:text="Add New Food Item" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="Food Name:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example: Corn Flakes Cereal"
            android:id="@+id/fanf_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="Serving (Grams):"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example: 100"
            android:id="@+id/fanf_serving"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="Calories:"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example: 399"
            android:id="@+id/fanf_calories"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="Fat (Grams):"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example: 0.3"
            android:id="@+id/fanf_fat"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="Carbs (Grams):"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example: 88.8"
            android:id="@+id/fanf_carbs"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="Fiber (Grams):"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example: 1.1"
            android:id="@+id/fanf_fiber"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="8dp"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="Protein (Grams):"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Example: 7.7"
            android:id="@+id/fanf_protein"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="16dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gold_button"
        android:text="@string/exercise_submit"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:id="@+id/fanf_btnSubmit"/>

</LinearLayout>