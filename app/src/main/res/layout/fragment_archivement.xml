<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient_background"
android:orientation="vertical"
android:paddingTop="20sp"
android:weightSum="10">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:paddingStart="35sp"
        android:paddingEnd="0sp"
        android:fontFamily="@font/semibold"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="Achievements"/>

    <TextView
        android:id="@+id/tv_burnedCaloriesExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="35sp"
        android:paddingEnd="0sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/regular"
        android:text="Calories burned from exercise"
        android:textColor="@color/gold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_burnedCaloriesExercise"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="8sp"
        android:layout_marginRight="180sp"
        android:background="@drawable/input_field_button"
        android:ems="10"
        android:textSize="18sp" />

<GridLayout
    android:columnCount="1"
    android:rowCount="1"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:layout_weight="0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    android:layout_marginTop="30sp">



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/goal_distance_progress">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ProgressBar
                android:id="@+id/progressBar_goals_burn_calories_exercise"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:secondaryProgress="0"/>

            <TextView
                android:id="@+id/tv_goals_burn_calories_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progressBar_goals_burn_calories_exercise"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</GridLayout>


</LinearLayout>

