<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:paddingStart="35sp"
            android:paddingEnd="0sp"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="@string/exercise_tracker_title" />

        <TextView
            android:id="@+id/tv_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:paddingLeft="35sp"
            android:fontFamily="@font/regular"
            android:textSize="18sp"
            android:textColor="@color/gold"
            android:text="@string/exercise_list" />

        <Spinner
            android:id="@+id/sp_exercise"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="180sp"
            android:background="@drawable/input_field_button"
            android:entries="@array/exercise_catalog" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/regular"
            android:paddingStart="35sp"
            android:paddingEnd="0sp"
            android:text="Date"
            android:textColor="@color/gold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:fontFamily="@font/semibold"
            android:textSize="22sp"/>

        <Chronometer
            android:id="@+id/c_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60sp"
            android:layout_marginBottom="25sp"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:textAllCaps="false"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/gold_button"
            android:text="Start" />

        <Button
            android:id="@+id/btn_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:textAllCaps="false"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/gold_button"
            android:text="End" />

    </LinearLayout>
</ScrollView>