<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:paddingTop="20sp"
    android:weightSum="10">

    <ImageView
        android:id="@+id/iv_goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginStart="30sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="30sp"
            android:fontFamily="@font/semibold"
            android:paddingStart="40sp"
            android:paddingEnd="0sp"
            android:text="@string/IMC"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="220sp"
            android:text="Your IMC is"
            android:fontFamily="@font/bold"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textSize="20sp"
            tools:fontFamily="@font/regular" />

        <EditText
            android:id="@+id/frp_IMC"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:background="@drawable/input_field_button"
            android:ems="10"
            android:inputType="none" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="78dp">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/semibold"
                android:layout_marginLeft="45sp"
                android:layout_marginTop="22sp"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:fontFamily="@font/regular" />

            <TextView
                android:id="@+id/tv_diferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="260sp"
                android:fontFamily="@font/semibold"
                android:layout_marginTop="22sp"
                android:text="Difference"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:fontFamily="@font/regular" />

            <TextView
                android:id="@+id/tv_imc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45sp"
                android:layout_marginTop="45sp"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="260sp"
                android:layout_marginTop="45sp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_centerInParent="true"

            android:text="
              \n    Very Severely Underweight:     -16
              \n    Severely Underweight:              16.1 - 18.4
              \n    Underweight:                              18.5 - 22
              \n    Normal:                                        22.1 - 24.9
              \n    Overweight:                                 25 - 29.9
              \n    Obese Class I:                             30 - 34.9
              \n    Obese CLass II:                           35 - 39.9
              \n    Obese Class III:                           +40"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_pesoIdeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text=""
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold"/>

    </LinearLayout>




</LinearLayout>